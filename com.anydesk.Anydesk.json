{
    "app-id": "com.anydesk.Anydesk",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "25.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "anydesk",
    "separate-locales": false,
    "tags": [
        "proprietary"
    ],
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--system-talk-name=org.freedesktop.login1",
        "--device=dri",
        "--filesystem=home",
        "--env=GDK_SCALE=1"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/gtk-doc"
    ],
    "modules": [
        {
            "name": "polkit",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlibs-only=true",
                "-Dman=false",
                "-Dintrospection=false",
                "-Dexamples=false",
                "-Dgtk_doc=false",
                "-Dauthfw=shadow"
            ],
            "cleanup": [
                "/bin/*",
                "/etc/pam.d",
                "/etc/dbus-1",
                "/share/dbus-1/system-services/*",
                "/share/polkit-1",
                "/share/polkit-1/actions/*",
                "/lib/polkit-1"
            ],
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 3682,
                        "url-template": "https://gitlab.freedesktop.org/polkit/polkit/-/archive/$version/polkit-$version.tar.gz"
                    },
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/polkit/polkit/-/archive/124/polkit-124.tar.gz",
                    "sha256": "72457d96a0538fd03a3ca96a6bf9b7faf82184d4d67c793eb759168e4fd49e20"
                }
            ]
        },
        {
            "name": "anydesk",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 apply_extra /app/bin/apply_extra",
                "install -Dm755 lsb_release /app/bin/lsb_release",
                "install -Dm755 anydesk.sh /app/bin/anydesk",
                "for size in 16 24 32 48 64 128 256 512; do\n                    rsvg-convert -w $size -h $size -f png -o $size.png com.anydesk.Anydesk.svg\n                    install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.anydesk.Anydesk.png\n                done",
                "install -Dm644 com.anydesk.Anydesk.svg export/share/icons/hicolor/scalable/apps/com.anydesk.Anydesk.svg",
                "install -Dm644 com.anydesk.Anydesk.metainfo.xml /app/share/metainfo/com.anydesk.Anydesk.metainfo.xml",
                "install -Dm644 com.anydesk.Anydesk.desktop /app/share/applications/com.anydesk.Anydesk.desktop"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "tar --strip-components=1 -xf anydesk.tar.gz --no-same-owner",
                        "rm -f anydesk.tar.gz",
                        "chmod 755 anydesk"
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "anydesk.sh",
                    "commands": [
                        "exec /app/extra/anydesk \"$@\""
                    ]
                },
                {
                    "type": "script",
                    "dest-filename": "lsb_release",
                    "commands": [
                        "echo \"LSB Version:    n/a\""
                    ]
                },
                {
                    "type": "file",
                    "path": "com.anydesk.Anydesk.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "com.anydesk.Anydesk.desktop"
                },
                {
                    "type": "file",
                    "path": "com.anydesk.Anydesk.svg"
                },
                {
                    "type": "extra-data",
                    "filename": "anydesk.tar.gz",
                    "url": "https://download.anydesk.com/linux/anydesk-7.1.3-amd64.tar.gz",
                    "sha256": "6f559240c46515aaa11020812a83e3508c30e458f7c9f37cc31c000ae3bb451e",
                    "size": 14932865,
                    "only-arches": [
                        "x86_64"
                    ],
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://download.anydesk.com/linux/",
                        "pattern": "(\\./anydesk-([0-9.]+)-amd64.tar.gz)"
                    }
                },
                {
                    "type": "extra-data",
                    "filename": "anydesk.tar.gz",
                    "url": "https://download.anydesk.com/rpi/anydesk-7.1.3-arm64.tar.gz",
                    "sha256": "61be499e3c6cf0098c785bd663e558193a2fa4bc16d4f44f044259505eb7800d",
                    "size": 14956692,
                    "only-arches": [
                        "aarch64"
                    ],
                    "x-checker-data": {
                        "type": "html",
                        "url": "https://download.anydesk.com/rpi/",
                        "pattern": "(\\./anydesk-([0-9.]+)-arm64.tar.gz)"
                    }
                }
            ]
        }
    ]
}
